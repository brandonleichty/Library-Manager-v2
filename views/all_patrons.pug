extends layout

block content
  h1= pageTitle
  p
    a.button(href='/patrons/new_patron') Create New Patron

  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip

    tbody
      if patrons.length > 0
        each patron in patrons
          tr
            td
              a(href='/patrons/details/' + patron.id)= patron.first_name + ' ' + patron.last_name
            td= patron.address
            td= patron.email
            td= patron.library_id
            td= patron.zip_code
      else
        tr
          td No records found.