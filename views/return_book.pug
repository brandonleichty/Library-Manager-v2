extends layout

block content
  h1= pageTitle

  if errors
    ul
      each error in errors
        li
          em= error.message

  p
    strong Book Title:
    |  #{book.title}
  p
    strong Loaned By:
    |  #{patron.first_name} #{patron.last_name}
  p
    strong Loaned On:
    |  #{loan.loaned_on}
  p
    strong Return By:
    |  #{loan.return_by}
  form(method= 'post' action= '/loans/return/' + loan.id)
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text' value=today name="returned_on")
    p
      input(type='submit', value='Return Book')

